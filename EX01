import java.util.Scanner;

public class Uni4Exe01 {
    public static void main(String[] args) {
        int horasMes;
        double valorHora, salarioTotal;

        Scanner sc = new Scanner(System.in);

        System.out.println("Entre com as horas trabalhadas no mês: ");
        horasMes = sc.nextInt();

        System.out.println("Entre com o valor pago por hora: ");
        valorHora = sc.nextDouble();

        if (horasMes > 160) {
            int horasExtras = horasMes - 160;
            salarioTotal = (160 * valorHora) + (horasExtras * valorHora * 1.5);
        } else {
            salarioTotal = horasMes * valorHora;
        }

        System.out.printf("O salário total é: %.2f\n", salarioTotal);

        sc.close();
    }
}
